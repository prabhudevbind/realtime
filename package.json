{
  "name": "realtimecall",
  "version": "1.0.0",
  "description": "Real-time peer-to-peer calling app with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client/vite-project && npm run dev",
    "build": "cd client/vite-project && npm install && npm run build",
    "install-client": "cd client/vite-project && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "render-postbuild": "npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "mongoose": "^7.5.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "webrtc",
    "socket.io",
    "mern",
    "realtime",
    "calling"
  ],
  "author": "Your Name",
  "license": "MIT"
}
